{
  "name": "vim-mode-visualizer",
  "publisher": "shunki",
  "displayName": "vim-mode-visualizer",
  "description": "vim-mode-visualizer",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vim-mode-visualizer.helloWorld",
        "title": "Vim Mode Visualizer: Hello World"
      },
      {
        "command": "vim-mode-visualizer.onInsert",
        "title": "Vim Mode Visualizer: Insert"
      },
      {
        "command": "vim-mode-visualizer.onNormal",
        "title": "Vim Mode Visualizer: Normal"
      },
      {
        "command": "vim-mode-visualizer.showMode",
        "title": "Show Vim Mode"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
