{
  "name": "vim-mode-visualizer",
  "publisher": "shun0001",
  "displayName": "vim-mode-visualizer",
  "description": "vim-mode-visualizer",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.108.1"
  },
  "icon": "images/icon.png",
  "license": "MIT",
  "keywords": [
    "vim",
    "vscodevim",
    "cursor",
    "visualizer",
    "mode"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Vim Mode Visualizer",
      "properties": {
        "vimModeVisualizer.enableNotification": {
          "type": "boolean",
          "default": true,
          "description": "Show popup notification when Vim mode changes"
        },
        "vimModeVisualizer.enableInline": {
          "type": "boolean",
          "default": true,
          "description": "Enable inline mode indicator near the cursor"
        }
      }
    },
    "commands": [
      {
        "command": "vim-mode-visualizer.showMode",
        "title": "Show Vim Mode"
      }
    ],
    "colors": [
      {
        "id": "vimModeVisualizer.normal",
        "description": "Normal mode color",
        "defaults": {
          "dark": "#2196F3",
          "light": "#1976D2"
        }
      },
      {
        "id": "vimModeVisualizer.insert",
        "description": "Insert mode color",
        "defaults": {
          "dark": "#4CAF50",
          "light": "#388E3C"
        }
      },
      {
        "id": "vimModeVisualizer.visual",
        "description": "Visual mode color",
        "defaults": {
          "dark": "#FF9800",
          "light": "#F57C00"
        }
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shunki0001/vim-mode-visualizer"
  },
  "scripts": {
    "build": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "vscode:prepublish": "npm run build",
    "compile": "tsc -p ./",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.2.3",
    "@types/vscode": "^1.108.1",
    "esbuild": "^0.27.3",
    "typescript": "^5.9.3"
  }
}
